@using System

@using ForumSystem.Web.Infrastructure.Extensions
@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Forum System</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome")

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <script src="~/signalr/hubs"></script>
</head>
<body>
    <div class="lead-wrapper">
        <div class="header-wrapper">
            <div class="navbar navbar-default margin-bottom">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Forum System", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
                    </div>

                    @if (User.IsLoggedIn())
                    {
                        @Html.Partial("_UserNavbarPartial");
                    }
                    else
                    {
                        @Html.Partial("_LoginPartial")
                    }
                </div>
            </div>
        </div>
        <div class="heading-wrapper">
            <div class="breadcrumb heading-nav">
                <div class="cell-page-title">
                    <div class="container container-holder">
                        <h1 class="page-title">@ViewBag.Title</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container main-container container-holder">
        @RenderBody()
        <div id="show-modal"></div>
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year - <a href="https://github.com/dmstoyanov/ForumSystem">Forum System</a>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/administration-scripts")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>
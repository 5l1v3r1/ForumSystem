@using System

@using ForumSystem.Web.Infrastructure.Extensions
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Forum System</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome")

    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <div class="lead-wrapper">
        <div class="header-wrapper">
            <div class="navbar navbar-default margin-bottom">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Forum System", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Forum", "Index", "Home", new { area = string.Empty }, null)</li>

                            @if (User.IsAdmin())
                            {
                                @Html.Partial("_AdministrationMenuPartial")
                            }

                            @if (User.IsModerator() || User.IsAdmin())
                            {
                                @Html.Partial("_ModeratorMenuPartial")
                            }
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
        <div class="heading-wrapper">
            <div class="breadcrumb heading-nav">
                <div class="cell-page-title">
                    <div class="container container-holder">
                        <h1 class="page-title">@ViewBag.Title</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container main-container container-holder">
        @RenderBody()
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year - <a href="https://github.com/dmstoyanov/ForumSystem">Forum System</a>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/administration-scripts")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>
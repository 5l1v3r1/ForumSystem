@model IEnumerable<ForumSystem.Web.Areas.Moderator.ViewModels.PostReports.PostReportViewModel>

@{
    ViewBag.Title = "Post Reports";
}

<table class="table-word-wrap table table-responsive table-hover table-striped">
    <tr>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.Post)
        </th>
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Author
            </td>
            <td>
                <a href="@Url.Action("Details", "Posts", new { area = string.Empty, id = item.PostId })">@item.Post</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
        </tr>
    }

</table>
